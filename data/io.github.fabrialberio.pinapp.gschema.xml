<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="pinapp">
  <schema id="io.github.fabrialberio.pinapp" path="/io/github/fabrialberio/pinapp/">
    <key name="show-all-apps" type="b">
      <default>false</default>
      <summary>Show all apps</summary>
    </key>
    <key name="search-paths" type="as">
      <default>[
        "/usr/share",
        "/run/host/usr/share",
        "/var/lib/flatpak/exports/share",
        "~/.local/share/flatpak/exports/share",
        "~/.local/share/xdg-desktop-portal",
        "/var/lib/snapd/desktop"
        ]</default>
      <summary>List of desktop file search paths in order of priority</summary>
    </key>
    <key name="user-path" type="s">
      <default>"~/.local/share/applications"</default>
    </key>
    <key name="autostart-path" type="s">
      <default>"~/.config/autostart"</default>
    </key>
  </schema>
</schemalist>
